{% import 'macros/landing.twig' as landing %}
{% set items = [
    {image: 'img/irina.png', name: 'Ирина Бейнаровича', position: 'За 2,5 года вышла на стабильный доход €5 000 в мес'},
    {image: 'img/raimond.png', name: 'Раймонд Рутенберг', position: '€20 000 в мес за 3,5 года '},
    {image: 'img/egon.png', name: 'Эгон Озолинш', position: '€30 000 в месяц за 4 года '},
    {image: 'img/karl.png', name: 'Карл Тринбахер', position: '€100 000 в месяц за 10 лет'},
    {image: 'img/margin.png', name: 'Мартин Мандера', position: '€300 000 в месяц за 8 лет'},
    {image: 'img/marrion.png', name: 'Марио Ореггия', position: '<span>€550 000</span> в месяц за 15 лет', highest: true}
] %}
<section class="section home-teachers">
    <div class="container">
        <div class="section__header">
            <h2 class="section__title home-teachers__title">
                Ты можешь быть <strong>как они</strong>
            </h2>
        </div>
        <div class="home-teachers__grid">
            {% for item in items %}
                <div class="home-teachers__item">
                    <div class="home-teachers__item-header">
                        {{ landing.image(item.image, item.name, 'home-teachers__item-image') }}
                        {% if item.highest %}
                            <div class="home-teachers__item-rating">
                                <p>Наивысший рейтинг<br>в компании!</p>
                            </div>
                            {% for star in 0..5 %}
                                <div class="home-teachers__item-stars">
                                    <svg xmlns="http://www.w3.org/2000/svg" height="511pt" viewBox="0 -10 511.98685 511" width="511pt"><path d="m510.652344 185.902344c-3.351563-10.367188-12.546875-17.730469-23.425782-18.710938l-147.773437-13.417968-58.433594-136.769532c-4.308593-10.023437-14.121093-16.511718-25.023437-16.511718s-20.714844 6.488281-25.023438 16.535156l-58.433594 136.746094-147.796874 13.417968c-10.859376 1.003906-20.03125 8.34375-23.402344 18.710938-3.371094 10.367187-.257813 21.738281 7.957031 28.90625l111.699219 97.960937-32.9375 145.089844c-2.410156 10.667969 1.730468 21.695313 10.582031 28.09375 4.757813 3.4375 10.324219 5.1875 15.9375 5.1875 4.839844 0 9.640625-1.304687 13.949219-3.882813l127.46875-76.183593 127.421875 76.183593c9.324219 5.609376 21.078125 5.097657 29.910156-1.304687 8.855469-6.417969 12.992187-17.449219 10.582031-28.09375l-32.9375-145.089844 111.699219-97.941406c8.214844-7.1875 11.351563-18.539063 7.980469-28.925781zm0 0" fill="#ffc107"/></svg>
                                </div>
                            {% endfor %}
                        {% endif %}
                    </div>
                    <p class="home-teachers__item-name">{{ item.name|raw }}</p>
                    <p class="home-teachers__item-position">{{ item.position|raw }}</p>
                </div>
            {% endfor %}
        </div>
        <div class="section__footer">
            <button
                class="btn btn_theme"
                data-action="modal"
                data-open="#free-consultation">Получить <span>бесплатную</span> консультацию</button>
        </div>
    </div>
</section>